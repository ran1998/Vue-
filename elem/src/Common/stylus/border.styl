body,html
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, -apple-system, BlinkMacSystemFont, "Segoe UI"
  -webkit-text-size-adjust:none
.clear
  display: inline-block
  &::after
    clear: both
    width: 0
    height: 0
    display: block
    content: '.'
    visibility:hidden;

border-1px($color)
  position: relative
  &:after
    width: 100%
    position: absolute
    border-top: 1px solid $color
    display: block
    left: 0
    bottom: 0
    content: ''
border-none()
  &:after
    display: none

bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")